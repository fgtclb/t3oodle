# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Get rid of whitespace to avoid diffs with a bunch of EOL changes

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# PHP-Files
[*.php]
indent_style = space
indent_size = 4

# XLF-Files
[*.xlf]
indent_style = space
indent_size = 4

# HTML-Files / Fluid standalone template
[*.html]
indent_style = tab
indent_size = 2

# JSON-Files
[*.json]
indent_style = tab
indent_size = 4

# ReST-Files
[*.rst]
indent_style = space
indent_size = 3

# MD-Files
[*.md]
indent_style = space
indent_size = 4

# TypoScript
[*.ts]
indent_style = space
indent_size = 2

# SQL-Files
[*.sql]
indent_style = tab
indent_size = 2

# TypoScript
[*.typoscript]
indent_style = space
indent_size = 2

[*.tsconfig]
indent_style = space
indent_size = 2

# Yaml
[*.yaml]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

[.ddev/config.yaml]
indent_size = 4
